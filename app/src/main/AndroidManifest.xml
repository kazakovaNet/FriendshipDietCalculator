<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ru.kazakova_net.friendshipdietcalculator">

    <application
        android:name=".application.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name=".activity.ViewFoodIntakeActivity"></activity>
        <activity
            android:name=".activity.ExportDataActivity"
            android:label="@string/export_data_activity_label" />
        <activity
            android:name=".activity.ListFoodIntakesActivity"
            android:label="@string/list_food_intakes_label"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.AddFoodIntakeActivity"
            android:label="@string/add_food_intake_activity_label"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".activity.ListProductsActivity"
            android:label="@string/list_products_label"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.AddProductActivity"
            android:label="@string/add_product_activity_label"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>